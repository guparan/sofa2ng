{
  "package_name" : "Sofa.Helper.Type",
  "targetlib" : "sofa/helper/types/"
  
  "srcpath" : "../../SofaKernel/framework",
  "tasks" : [
        {
          "name" : "Refactor OptionsGroup",
          "action" : [
                ["move", "$srcpath/$name", "src/$name"],
                ["spm", "package", "$package_name", "property", "source_files", "add-to", "src/$name.cpp"],   
                ["spm", "package", "$package_name", "property", "source_files", "add-to", "src/$name.inl"],   
                ["spm", "package", "$package_name", "property", "source_files", "add-to", "src/$name.h"],   
                ["rename", "#include <sofa/helper/$name.h>", "#include <$targetlib>"],
                ["fixheader", "SOFA_HELPER_OPTIONSGROUP_H", "SOFA_HELPER_TYPE_OPTIONSGROUP"]
          ]
       }
   ]
}
   


